<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//img[hasclass('pos-receipt-logo')][1]" position="replace">
            <div class="pos-receipt-pre-qr-code">
                <div>
                    <t t-esc="receipt.company.name"/>
                </div>
                <div>
                    <t t-if="receipt.company.street">
                        <span><t t-esc="receipt.company.street" /></span>
                    </t>
                    <t t-if="receipt.company.street2">
                        <span>، <t t-esc="receipt.company.street2" /></span>
                    </t>
                    <t t-if="receipt.company.city">
                        <span>، <t t-esc="receipt.company.city" /></span>
                    </t>
                    <t t-if="receipt.company.state">
                        <span>، <t t-esc="receipt.company.state" /></span>
                    </t>
                    <t t-if="receipt.company.country">
                        <span>، <t t-esc="receipt.company.country" /></span>
                    </t>
                </div>
                <t t-if="receipt.company.vat">
                    <div>الرقم الضريبي:<t t-esc="receipt.company.vat" /></div>
                </t>
            </div>
            <img class="pos-receipt-logo oe_hidden" t-att-src="receipt.company.logo" alt="Logo"/>
        </xpath>

        <xpath expr="//img[@id='qrcode']" position="after">
            <div class="pos-receipt-order-data-new">
                <div><t t-esc="receipt.name" /></div>
                <t t-if="receipt.date.localestring">
                    <div><t t-esc="receipt.date.localestring" /></div>
                </t>
                <t t-else="">
                    <div><t t-esc="receipt.date.validation_date" /></div>
                </t>
            </div>
        </xpath>

        <xpath expr="//span[@id='title_english']" position="replace">
            <t t-if="!receipt.is_settlement">
                <span id="title_english">Tax Invoice</span>
            </t>
        </xpath>

        <xpath expr="//span[@id='title_arabic']" position="replace">
            <t t-if="!receipt.is_settlement">
                <span id="title_arabic">فاتورة ضريبية</span>
            </t>
        </xpath>

        <xpath expr="//div[@class='pos-receipt-contact']" position="replace">
            <div class="pos-receipt-contact">
                <t t-if="receipt.cashier">
                    <div class="cashier">
                        <div>--------------------------------</div>
                        <div>البائع <t t-esc="receipt.cashier" /></div>
                    </div>
                </t>
                <t t-if="receipt.partner">
                    <br/>
                    العميل:
                    <br/>
                    <div class="partner">
                        <t t-esc="receipt.partner.name"/>
                    </div>
                    <div>
                        <t t-if="receipt.partner.street">
                            <span><t t-esc="receipt.partner.street" /></span>
                        </t>
                        <t t-if="receipt.partner.street2">
                            <span>، <t t-esc="receipt.partner.street2" /></span>
                        </t>
                        <t t-if="receipt.partner.city">
                            <span>، <t t-esc="receipt.partner.city" /></span>
                        </t>
                        <t t-if="receipt.partner.state">
                            <span>، <t t-esc="receipt.partner.state" /></span>
                        </t>
                        <t t-if="receipt.partner.country">
                            <span>، <t t-esc="receipt.partner.country" /></span>
                        </t>
                    </div>
                    <t t-if="receipt.partner.vat">
                        <div>الرقم الضريبي:<t t-esc="receipt.partner.vat" /></div>
                    </t>
                </t>
            </div>
        </xpath>

        <xpath expr="//div[@class='orderlines']" position="replace">
            <div class="orderlines">
                <t t-call="OrderLinesReceiptNew"/>
            </div>
            <t t-foreach="receipt.paymentlines" t-as="line" t-key="line.cid">
                <div>
                    <br/>
                    نوع الدفع: <t t-esc="line.name" />
                    <!-- <span t-esc="env.pos.format_currency_no_symbol(line.amount)" class="pos-receipt-right-align"/> -->
                </div>
            </t>
            <t t-if="isTaxIncluded">
                <!-- <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">
                    <div>
                        <t t-esc="tax.name" />
                        <span t-esc="env.pos.format_currency_no_symbol(tax.amount)" class="pos-receipt-right-align"/>
                    </div>
                </t> -->
                <div>
                    <br/>
                    الإجمالي غير شامل الضريبة
                    <span t-esc="env.pos.format_currency_no_symbol(receipt.total_with_tax - receipt.total_tax)" class="pos-receipt-right-align"/>
                </div>
                <div>
                    <br/>
                    Total Taxes
                    <span t-esc="env.pos.format_currency_no_symbol(receipt.total_tax)" class="pos-receipt-right-align"/>
                </div>
            </t>
        </xpath>

        <xpath expr="//t[@t-if='isTaxIncluded'][2]" position="replace"/>

        <xpath expr="//t[@t-foreach='receipt.paymentlines'][2]" position="replace"/>
    </t>

    <t t-name="OrderLinesReceiptNew" owl="1">
        <t t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
            <t t-if="isSimple(line)">
                <div class="responsive-price">
                    <t t-esc="line.product_name_wrapped[0]" />
                    <span t-esc="env.pos.format_currency_no_symbol(line.price_without_tax)" class="price_display pos-receipt-right-align"/>
                </div>
                <WrappedProductNameLines line="line" />
            </t>
            <t t-else="">
                <div t-esc="line.product_name_wrapped[0]" />
                <WrappedProductNameLines line="line" />
                <t t-if="line.display_discount_policy == 'without_discount' and line.price != line.price_lst">
                    <div class="pos-receipt-left-padding">
                        <t t-esc="env.pos.format_currency_no_symbol(line.price_lst)" />
                        ->
                        <t t-esc="env.pos.format_currency_no_symbol(line.price)" />
                    </div>
                </t>
                <t t-elif="line.discount !== 0">
                    <div class="pos-receipt-left-padding">
                        <t t-if="env.pos.config.iface_tax_included === 'total'">
                            <t t-esc="env.pos.format_currency_no_symbol(line.price_with_tax_before_discount)"/>
                        </t>
                        <t t-else="">
                            <t t-esc="env.pos.format_currency_no_symbol(line.price)"/>
                        </t>
                    </div>
                </t>
                <t t-if="line.discount !== 0">
                    <div class="pos-receipt-left-padding">
                        Discount: <t t-esc="line.discount" />%
                    </div>
                </t>
                <div class="pos-receipt-left-padding">
                    <t t-esc="Math.round(line.quantity * Math.pow(10, env.pos.dp['Product Unit of Measure'])) / Math.pow(10, env.pos.dp['Product Unit of Measure'])"/>
                    <t t-if="!line.is_in_unit" t-esc="line.unit_name" />
                    x
                    <t t-esc="env.pos.format_currency(line.price_display_one_without_tax)" />
                    <span class="price_display pos-receipt-right-align">
                        <t t-esc="env.pos.format_currency_no_symbol(line.price_without_tax)" />
                    </span>
                </div>
            </t>
            <t t-if="line.customer_note">
                <div class="pos-receipt-left-padding pos-receipt-customer-note">
                    <t t-esc="line.customer_note"/>
                </div>
            </t>
            <t t-if="line.pack_lot_lines">
                <div class="pos-receipt-left-padding">
                    <ul>
                        <t t-foreach="line.pack_lot_lines" t-as="lot" t-key="lot.cid">
                            <li>
                                SN <t t-esc="lot.lot_name"/>
                            </li>
                        </t>
                    </ul>
                </div>
            </t>
        </t>
    </t>
</templates>
